{
  "manifest_version": 3,
  "name": "WebMCP Local AI Agent",
  "version": "1.0.0",
  "description": "WebMCP agent using local Ollama LLMs (functiongemma + qwen2.5)",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "action": {
    "default_title": "Open WebMCP AI Agent"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
